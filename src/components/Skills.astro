---

<section class="skills" id="skills">
	<div class="container">
		<h2>Technical Skills & Expertise</h2>
		<div class="skills-grid">
			{Object.entries(skills).map(([category, items]) => (
				<div class="skill-category">
					<h3>{category}</h3>
					<div class="skill-items">
						{items.map((skill) => (
							<div class="skill-item">
								<span>{skill}</span>
							</div>
						))}
					</div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.skills {
		padding: 6rem 2rem;
		background: rgb(var(--bg-tertiary));
		transition: background-color 0.3s ease;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	h2 {
		font-size: 2.5rem;
		color: rgb(var(--text-primary));
		margin-bottom: 3rem;
		text-align: center;
		transition: color 0.3s ease;
	}

	.skills-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
		gap: 2.5rem;
	}

	.skill-category {
		background: rgb(var(--bg-secondary));
		padding: 2rem;
		border-radius: 12px;
		box-shadow: 0 4px 6px rgba(var(--shadow-color));
		transition: all 0.3s ease;
		border: 1px solid rgba(var(--border-color));
	}

	.skill-category:hover {
		transform: translateY(-4px);
		box-shadow: 0 8px 20px rgba(var(--shadow-color));
	}

	.skill-category h3 {
		color: rgb(var(--accent));
		margin-bottom: 1.5rem;
		font-size: 1.3rem;
		font-weight: 600;
		border-bottom: 2px solid rgba(var(--accent), 0.2);
		padding-bottom: 0.5rem;
	}

	.skill-items {
		display: flex;
		flex-wrap: wrap;
		gap: 0.8rem;
	}

	.skill-item {
		background: linear-gradient(135deg, rgba(var(--accent), 0.1), rgba(var(--accent-light), 0.1));
		border: 1px solid rgba(var(--accent), 0.2);
		padding: 0.6rem 1rem;
		border-radius: 20px;
		transition: all 0.2s ease;
		cursor: default;
	}

	.skill-item:hover {
		background: rgba(var(--accent), 0.15);
		border-color: rgba(var(--accent), 0.4);
		transform: translateY(-2px);
	}

	.skill-item span {
		color: rgb(var(--text-primary));
		font-weight: 500;
		font-size: 0.9rem;
		transition: color 0.3s ease;
	}

	@media (max-width: 768px) {
		.skills {
			padding: 4rem 1rem;
		}

		.container {
			max-width: 100%;
		}

		.skills-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.skill-category {
			padding: 1.5rem;
		}

		.skill-category h3 {
			font-size: 1.2rem;
		}

		.skill-items {
			gap: 0.6rem;
		}

		.skill-item {
			padding: 0.5rem 0.8rem;
			font-size: 0.85rem;
		}
	}
</style> 